<% layout('layouts/boilerplate')%>
   



<% if (x==1) { %>
   <% layout('layouts/sboilerplate')%>
 <%}%>


 

<h1>Alumni</h1>
 
<form class="d-flex">
    <input class="form-control me-2" type="search" placeholder="Search based on title" aria-label="Search" name="title">
    <button class="btn btn-primary" type="submit">Search</button>
</form>


<% for (let campground of lst){%>
    <br>
<div class="card" mb-3>
    <div class="row">
        <div class="col-md-4">
            <img class="img-fluid" alt="" src="<%=campground.image%>">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title"><%= campground.name %> </h5>
                <h5 class="card-title"> Branch <%= campground.Bs%> </h5>

                <h5 class="card-title"> Batch <%= campground.year %> </h5>
                <h5 class="card-title"> Rollno <%= campground.rollno %> </h5>
      
                
               
                <% if (x==1) { %>
                    <a class="btn btn-primary" href="/salumni/<%=campground.rollno%>">View </a>
 
                  <%}%>
                <%  if (x==0){%>
                <a class="btn btn-primary" href="/alumni/<%=campground.rollno%>">View </a>

                <form action="/mail/<%=campground.rollno %>" method="POST" novalidate class="validated-form">
                    <div class="mb-3">
                        <label class="form-label" for="title">Write an Email</label>
                        <input class="form-control" type="text" id="title" name="msg" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                    <div class="mb-3">
                        <button class="btn btn-success">Send</button>
                    </div>
                </form>
                

                <%}%>
            </div>
        </div>
    </div>
</div>
<% }%>